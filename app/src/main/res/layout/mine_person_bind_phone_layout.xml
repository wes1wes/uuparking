<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        android:id="@+id/include11"
        layout="@layout/common_diy_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_my_person_bind_phone_numer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_center"
        android:gravity="center_vertical"
        android:hint="输入手机号"
        android:inputType="phone"
        android:paddingStart="8dp"
        android:textSize="@dimen/values_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include11" />

    <Button
        android:id="@+id/btn_my_bind_person_get_code"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:text="获取验证码"
        android:textColor="@color/uu_hint_corlor_dark"
        app:layout_constraintEnd_toEndOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/et_my_bind_person_phone_code"
        app:layout_constraintTop_toBottomOf="@+id/et_my_person_bind_phone_numer" />

    <EditText
        android:id="@+id/et_my_bind_person_phone_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_search_center"
        android:gravity="center_vertical"
        android:hint="验证码"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textSize="@dimen/values_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_my_bind_person_get_code"
        app:layout_constraintEnd_toStartOf="@+id/btn_my_bind_person_get_code"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintTop_toTopOf="@+id/btn_my_bind_person_get_code" />


    <Button
        android:id="@+id/btn_my_bind_person_ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rectangle_rounded_blue"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_bind_person_get_code"
        app:layout_constraintStart_toStartOf="@+id/et_my_bind_person_phone_code"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_bind_person_get_code" />


    <TextView
        android:id="@+id/textView43"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite"
        android:paddingStart="4dp"
        android:text="温馨提示！"
        android:textColor="@color/colorBabiButtonGray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintStart_toStartOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_bind_person_ok" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorWhite"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="绑定手机号成功后，您将可以使用手机号+验证码登录由由；如果手机号已经存在账户，微信将会与该账户关联。"
        android:textColor="@color/colorBabiButtonGray"
        app:layout_constraintEnd_toEndOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintStart_toStartOf="@+id/et_my_person_bind_phone_numer"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />


</android.support.constraint.ConstraintLayout>