<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_diy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="@mipmap/index_info_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="单价（元/时）"
            android:textColor="@color/uuImportantText"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_share_parking_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"
            android:background="@drawable/edittext_normal"
            android:gravity="end|center_vertical"
            android:hint="元/时"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@mipmap/index_info_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_parking_start"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="开始时间"
                android:textColor="@color/uuImportantText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tc_share_parking_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="center_vertical|end"
                android:paddingEnd="16dp"
                android:text="09:00"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_parking_end"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="结束时间"
                android:textColor="@color/uuImportantText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tc_share_parking_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="center_vertical|end"
                android:paddingEnd="@dimen/values_16dp"
                android:text="15:00"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBabiGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/index_info_bg"
        android:orientation="horizontal"
        android:paddingEnd="18dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="次数:"
            android:textColor="@color/uuImportantText"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_share_parking_workday"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:checked="false"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="工作日"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_share_parking_weekend"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:checked="false"
            android:clickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="周末"
            android:textSize="16sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBabiGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:background="@mipmap/index_info_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <CheckBox
                android:id="@+id/cb_share_parking_monday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期一"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_share_parking_tuesday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期二"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_share_parking_wednesday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期三"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <CheckBox
                android:id="@+id/cb_share_parking_thursday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期四"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_share_parking_friday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期五"
                android:textSize="16sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <CheckBox
                android:id="@+id/cb_share_parking_saturday"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期六"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_share_parking_week"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:clickable="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="星期日"
                android:textSize="16sp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBabiGray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_share_parking"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_rectangle_rounded_blue"
        android:text="保存设置"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</LinearLayout>