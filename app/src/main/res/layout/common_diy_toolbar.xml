<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_common_diy_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        android:paddingBottom="12dp"
        android:paddingEnd="8dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/tv_common_diy_toolbar_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_common_diy_toolbar_title"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_common_diy_toolbar_title"
        app:srcCompat="@mipmap/for_left" />

    <TextView
        android:id="@+id/tv_common_diy_toolbar_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:text="标题"
        android:textColor="@color/uuImportantText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_common_diy_toolbar_back"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>