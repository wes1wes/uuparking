<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_ll_elv_linear"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_image_elv_item_status"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:src="@mipmap/p_no" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">
        <TextView
            android:id="@+id/item_tv_elv_item_location"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="wz"
            android:textColor="@color/uuImportantText"
            />
        <TextView
            android:id="@+id/item_tv_elv_item_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="id"
            android:textColor="@color/uuImportantText"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/item_image_elv_item_select"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/values_16dp"
        android:tag="0"
        android:src="@mipmap/radios" />

</LinearLayout>